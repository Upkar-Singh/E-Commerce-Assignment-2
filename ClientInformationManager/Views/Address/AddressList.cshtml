@model IEnumerable<ClientInformationManager.Models.Address>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prov_state)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zip_postal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.country_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.first_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_state)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zip_postal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.country_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person.first_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.address_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.address_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.address_id })
        </td>
    </tr>
}

</table>
